@model Department
@{
    ViewData["Title"] = "Edit";
}

<h1>Department @Model.Name Edit </h1>
<div asp-validation-summary="All"></div>
<form asp-action="Edit">

    <div class="form-group">
        <label class="col-form-label" asp-for="Code"></label>
        <input class="form-control" asp-for="Code" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="form-group">

        <label class="col-form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>



    </div>
    <div class="form-group">

        <label class="col-form-label" asp-for="DateOfCreation"></label>
        <input class="form-control" asp-for="DateOfCreation" />
        <span asp-validation-for="DateOfCreation" class="text-danger"></span>


    </div>


    <input type="submit" value="Save" class="btn btn-info" />
    <a class="btn btn-light" asp-action="Index">Back to list</a>


</form>

