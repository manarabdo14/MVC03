@model IEnumerable<Department>
@{
    ViewData["Title"] = "All Departments";
}
<a asp-action="Create" class="btn btn-success">Create New Department</a>
<br />
@if(Model.Count() > 0)
    {
    <h1>All Departmens</h1>
    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(D => D.Code)</td>
                <td>@Html.DisplayNameFor(D => D.Name)</td>
                <td>@Html.DisplayNameFor(D => D.DateOfCreation)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
          
            @foreach(var dep in Model)
            {
                <tr>
                    <td>@dep.Code</td>
                    <td>@dep.Name</td>
                    <td>@dep.DateOfCreation</td>
                    <td><a asp-action="Details" asp-route-departmentID="@dep.ID"><i class="fas fa-eye"></i></a></td>
                    <td><a asp-action="Edit" asp-route-departmentID="@dep.ID" ><i class="fas fa-edit"></i></a></td>
                    <td>.</td>
                </tr>
            }

           
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>
            There is no Departments
        </h3>
    </div>
}

